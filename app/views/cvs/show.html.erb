<p id="notice"><%= notice %></p>


<div class="container">

  <div class="row-fluid">
    <div class="col-xs-8 leftPart">
      <div class="name">
        <h1> <%=raw @cv.name %> </h1>
      </div>
      <div class="profile">
        <h1> <i class="icon-user"></i> Profile</h1>
        <p>
          <%=raw @cv.profile %>
        </p>
      </div>
      <div class="projects">
        <h1> <i class="icon-book" ></i> Recent Work Experience </h1>
          
      </div>
    </div>
    
    <div class="col-xs-4 rightPart">
      <aside>
        <div class="photo">
          <p>
            <%= image_tag @cv.avatar.url if @cv.avatar? %>
          </p>
        </div>
        <div class="title">
          <p>
            <%=raw @cv.title %>
          </p>
        </div>
        
      </aside>
    </div>

  </div>
</div>
