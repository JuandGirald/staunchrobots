<li class="project">
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  
  <h3>Resources</h3>
  <div class="nested-level-2">
    <ul class="project_interest_point-container">
      <%= f.nested_fields_for :project_interest_points, new_item_index: 'new_project_interest_point_item', html: { class: "project_interest_point-form" } do |f| %>
        <li class="project_interest_point">
          <%= f.label :content %>
          <%= f.text_field :content %>
          
          <a href="#" class="project_interest_point-remove">remove</a>

          <%= f.hidden_field :id %>
          <%= f.hidden_field :_destroy %>
        </li>
      <% end %>
    </ul>
    <a href="#" class="project_interest_point-add">Add Project Description</a>
  </div>
  <a href="#" class="project-remove">remove project</a>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
</li>