<section class="container">
  
  <div class="title">
    <h1 class="special-heading dark-special">Listing cvs</h1>  
  </div>
  

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cvs.each do |cv| %>
        <tr>
          <td><%= cv.name %></td>
          <td><%= cv.title %></td>
          <td>
            <div class="image">
              <%= image_tag cv.avatar.url(:thumb) if cv.avatar? %>
            </div>
          </td>
          
          <td><%= link_to 'Show', cv %></td>
          <td><%= link_to 'Edit', edit_cv_path(cv) %></td>
          <td><%= link_to 'Destroy', cv, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if current_user.admin %>
    <%= link_to 'New Cv', new_cv_path %>
  <% end %>

</section>